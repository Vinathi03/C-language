#include<stdio.h>
int main(){
	int n;
	scanf("%d",&n);
	int x[n],y[n];
	printf("The elements of n are:",n);
	for(int i=0;i<n;i++){
		scanf("%d",&x[i]);
	}
	printf("after copying the elements:");
	for(int i=0;i<n;i++)
	
		printf("%d\n",y[i]=x[i]);
		printf("To reverse the array");
		for(int i=0;i<=n;i++)
			printf("%d\n", y[i] = x[n - i - 1]);
	return 0;	
}
